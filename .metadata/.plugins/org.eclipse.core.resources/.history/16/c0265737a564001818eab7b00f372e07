package utils;

import java.text.SimpleDateFormat;
import java.util.Date;

public class DateFormate {
	private static final SimpleDateFormat formatTime = new SimpleDateFormat("yyyy-MM-dd   HH:mm:ss;");
	private static final SimpleDateFormat formatTimeForSql = new SimpleDateFormat("yyyy-MM-dd");
	
	public static String dateFormate(Date date) {
		return formatTime.format(date);
	}
}
